# railway.toml — configuratie voor Railway deployment

[build]
builder = “NIXPACKS”

[deploy]
startCommand = “npm start”
healthcheckPath = “/health”
healthcheckTimeout = 30
restartPolicyType = “ON_FAILURE”
restartPolicyMaxRetries = 3

[[services]]
name = “kringloop-backend”

[services.variables]
NODE_ENV = “production”